{
  "name": "template-discordbot",
  "description": "An esm nodejs template for discord bots using discord.js",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-discordbot"
  },
  "keywords": [
    "node",
    "esm",
    "discord",
    "discord.js",
    "bot",
    "template"
  ],
  "engines": {
    "node": "24"
  },
  "imports": {
    "#*": "./src/*.ts"
  },
  "scripts": {
    "register": "node --env-file-if-exists .env ./src/registration.ts",
    "unregister": "node --env-file-if-exists .env ./src/registration.ts",
    "dev": "node --env-file .env --watch src/main.ts | pino-pretty",
    "start": "node src/main.ts",
    "test": "vitest",
    "biome-check": "biome check --diagnostic-level=warn --no-errors-on-unmatched",
    "biome-fix": "pnpm biome-check --write",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@mkvlrn/config": "^3.0.7",
    "@types/node": "^25.1.0",
    "@vitest/coverage-v8": "^4.0.18",
    "cross-env": "^10.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "rimraf": "^6.1.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "vitest-mock-extended": "^3.1.0"
  },
  "dependencies": {
    "@mkvlrn/result": "^5.0.5",
    "@napi-rs/canvas": "^0.1.89",
    "discord.js": "^14.25.1",
    "envalid": "^8.1.1",
    "pino": "^10.3.0"
  }
}
