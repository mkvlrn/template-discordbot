{
  "name": "template-discordbot",
  "description": "An esm nodejs template for discord bots using discord.js",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-discordbot"
  },
  "keywords": [
    "node",
    "esm",
    "discord",
    "discord.js",
    "bot",
    "template"
  ],
  "engines": {
    "node": "25"
  },
  "imports": {
    "#/*": "./src/*.ts"
  },
  "scripts": {
    "register": "dotenv -- node ./src/registration.ts",
    "unregister": "dotenv -- node ./src/registration.ts",
    "dev": "dotenv -- node --watch src/main.ts | pino-pretty",
    "start": "dotenv -- node .env src/main.ts",
    "test": "vitest",
    "test-staged": "vitest related --bail=1 --reporter=github-actions",
    "test-ci": "vitest --bail=1 --reporter=github-actions",
    "biome-check": "biome check --diagnostic-level=warn --no-errors-on-unmatched",
    "biome-fix": "pnpm biome-check --write",
    "typecheck": "tsc-files",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@mkvlrn/config": "^3.1.0",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "rimraf": "^6.1.3",
    "tsc-files": "^1.1.4",
    "typescript": "6.0.0-beta",
    "vitest": "^4.0.18",
    "vitest-mock-extended": "^3.1.0"
  },
  "dependencies": {
    "@mkvlrn/result": "^5.0.7",
    "@napi-rs/canvas": "^0.1.93",
    "discord.js": "^14.25.1",
    "envalid": "^8.1.1",
    "pino": "^10.3.1"
  }
}
