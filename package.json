{
  "name": "template-discordbot",
  "description": "An esm nodejs template for discord bots using discord.js",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-discordbot"
  },
  "keywords": [
    "node",
    "esm",
    "discord",
    "discord.js",
    "bot",
    "template"
  ],
  "engines": {
    "node": ">=23.6"
  },
  "imports": {
    "#*": {
      "dev": "./src/*.ts",
      "default": "./build/*.js"
    }
  },
  "scripts": {
    "build": "node scripts/build.ts",
    "register-commands": "node -C dev --env-file=.env scripts/register-commands.ts",
    "dev": "node -C dev --env-file=.env --watch src/main.ts",
    "start": "node --env-file=.env build/main.js",
    "test": "node -C dev --test 'src/**/*.test.ts'",
    "biome-check": "biome check --no-errors-on-unmatched",
    "biome-fix": "yarn biome-check --write",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "https://pkg.pr.new/biomejs/biome/@biomejs/biome@2d699e3",
    "@commitlint/cli": "^19.8.0",
    "@mkvlrn/config": "^2.0.3",
    "@types/node": "^22.14.0",
    "husky": "^9.1.7",
    "pino-pretty": "^13.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@logtail/pino": "^0.5.2",
    "discord.js": "^14.18.0",
    "pino": "^9.6.0",
    "zod": "^3.24.2"
  }
}
