{
  "name": "template-discordbot",
  "description": "An esm nodejs template for discord bots using discord.js",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-discordbot"
  },
  "keywords": [
    "node",
    "esm",
    "discord",
    "discord.js",
    "bot",
    "template"
  ],
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "build": "rimraf build && tsc -p tsconfig.build.json",
    "register-commands": "varlock run -- tsx scripts/register-commands.ts",
    "dev": "varlock run -- tsx --watch src/main.ts",
    "start": "varlock run -- node build/main.js",
    "test": "vitest",
    "test-integration": "cross-env INTEGRATION=true vitest",
    "biome-check": "biome check --no-errors-on-unmatched",
    "biome-fix": "pnpm biome-check --write",
    "typecheck": "tsc",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@mkvlrn/config": "^2.0.21",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "pino-pretty": "^13.1.1",
    "rimraf": "^6.0.1",
    "tsc-files": "^1.1.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "discord.js": "^14.22.1",
    "pino": "^9.10.0",
    "varlock": "^0.0.12",
    "zod": "^4.1.9"
  }
}
