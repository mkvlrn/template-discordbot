{
  "name": "template-discordbot",
  "description": "An esm nodejs template for discord bots using discord.js",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-discordbot"
  },
  "keywords": ["node", "esm", "discord", "discord.js", "bot", "template"],
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "swc src -d ./build --strip-leading-paths",
    "postbuild": "npx tsc-alias -f",
    "dev": "node --env-file=.env --import @swc-node/register/esm-register --watch src/main.ts",
    "start": "node --env-file=.env build/main.js",
    "register": "node --env-file=.env --import @swc-node/register/esm-register src/register.ts",
    "test": "vitest",
    "test:integration": "vitest",
    "test:e2e": "vitest",
    "tidy": "biome check --fix --no-errors-on-unmatched",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@swc-node/register": "^1.10.9",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.8",
    "husky": "^9.1.7",
    "pino-pretty": "^13.0.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "discord.js": "^14.17.3",
    "pino": "^9.6.0",
    "zod": "^3.24.1"
  }
}
