{
  "name": "template-discordbot",
  "description": "An esm nodejs template for discord bots using discord.js",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-discordbot"
  },
  "keywords": [
    "node",
    "esm",
    "discord",
    "discord.js",
    "bot",
    "template"
  ],
  "engines": {
    "node": "24"
  },
  "imports": {
    "#*": {
      "dev": "./src/*.ts",
      "default": "./build/*.js"
    }
  },
  "scripts": {
    "build": "rm -rf build && tsc --project tsconfig.build.json --listEmittedFiles",
    "cmd": "tsx -C dev ./src/registration/index.ts",
    "dev": "tsx -C dev --watch src/main.ts | pino-pretty",
    "start": "node build/main.js",
    "test": "vitest",
    "biome-check": "biome check --diagnostic-level=warn --no-errors-on-unmatched",
    "biome-fix": "pnpm biome-check --write",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@mkvlrn/config": "^3.0.4",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "cross-env": "^10.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "rimraf": "^6.1.2",
    "tsc-files": "^1.1.4",
    "tsdown": "^0.18.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16",
    "vitest-mock-extended": "^3.1.0"
  },
  "dependencies": {
    "discord.js": "^14.25.1",
    "pino": "^10.1.0",
    "varlock": "^0.1.3"
  }
}
