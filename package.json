{
  "name": "template-discordbot",
  "description": "An esm nodejs template for discord bots using discord.js",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-discordbot"
  },
  "keywords": [
    "node",
    "esm",
    "discord",
    "bot",
    "template"
  ],
  "scripts": {
    "swc": "node --import @swc-node/register/esm-register",
    "prebuild": "rm -rf build",
    "build": "npx swc src -d ./build --strip-leading-paths",
    "dev": "npm run swc -- --watch --env-file=.env src/main.ts",
    "start": "node --env-file=.env build/main.js",
    "test": "npm run swc -- scripts/test.ts",
    "test:cov": "npm run swc -- scripts/test.ts --coverage",
    "tidy": "npm run swc -- scripts/tidy.ts",
    "typecheck": "npx tsc --noEmit",
    "prepare": "npx husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@swc-node/register": "^1.10.9",
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.4",
    "@types/node": "^22.10.3",
    "@vitest/coverage-v8": "^2.1.8",
    "husky": "^9.1.7",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.7.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "discord.js": "^14.16.3",
    "pino": "^9.6.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
