{
  "name": "template-discordbot",
  "description": "A template for discord bots using discord.js",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-discordbot"
  },
  "keywords": ["node", "esm", "discord", "bot", "template"],
  "scripts": {
    "build": "node --import @swc-node/register/esm-register --env-file=.env scripts/build.ts",
    "dev": "node --import @swc-node/register/esm-register --env-file=.env --watch src/main.ts",
    "start": "node --env-file=.env build/main.js",
    "test": "node --import @swc-node/register/esm-register scripts/test.ts",
    "test:cov": "node --import @swc-node/register/esm-register scripts/test.ts --coverage",
    "tidy": "npx @biomejs/biome check --write scripts src test",
    "typecheck": "npx tsc --noEmit",
    "prepare": "npx husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@swc-node/register": "^1.10.9",
    "@swc/core": "^1.10.4",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "husky": "^9.1.7",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.7.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "discord.js": "^14.16.3",
    "pino": "^9.6.0"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  }
}
